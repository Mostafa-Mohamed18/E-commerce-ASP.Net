@model E_Shopping.DB.Tbl_Category

@{
    ViewBag.Title = "CategoryAdd";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}


<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Add Category</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.CategoryId, htmlAttributes: new { @class = "control-label col-md-2" })


            <div class="form-group">
                <h5> @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-md-2" })</h5>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h5> @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label col-md-2" })</h5>
                <div class="col-md-10">
                    @Html.CheckBox("IsActive")
                    @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                </div>
            </div>

            @Html.HiddenFor(model => model.IsDelete)


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Add" class="btn btn-primary" />
                    <a onclick="window.history.back();" class="btn btn-dark text-white">Cancel</a>
                </div>
            </div>
        </div>
    }
</div>